{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Documentation Validation Schema",
  "description": "Schema for validating documentation artifacts and their metadata",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "artifact_id": {
      "type": "string",
      "pattern": "^docs/.*\\.md$",
      "description": "File path relative to repository root (must start with 'docs/' and end with '.md')"
    },
    "metadata": {
      "type": "object",
      "description": "Frontmatter metadata from documentation file",
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Human-readable title for navigation and search"
        },
        "audience": {
          "type": "string",
          "enum": ["developer", "integrator", "operator", "researcher"],
          "description": "Primary target audience for this documentation"
        },
        "content_type": {
          "type": "string",
          "enum": ["conceptual", "procedural", "reference", "tutorial"],
          "description": "Type of documentation content"
        },
        "maintenance_status": {
          "type": "string",
          "enum": ["current", "outdated", "deprecated"],
          "description": "Currency status of documentation"
        },
        "last_updated": {
          "type": "string",
          "format": "date",
          "description": "ISO 8601 date of most recent content modification"
        },
        "related_artifacts": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^.+\\.md$"
          },
          "description": "List of related documentation file paths (relative to docs/)"
        },
        "validation_status": {
          "type": "boolean",
          "description": "Whether all code examples passed validation"
        },
        "validation_date": {
          "type": "string",
          "format": "date",
          "description": "ISO 8601 date when validation was last performed"
        }
      },
      "required": ["title", "audience", "content_type", "maintenance_status", "last_updated", "validation_status"],
      "additionalProperties": false
    },
    "code_examples": {
      "type": "array",
      "description": "List of code examples extracted from documentation",
      "items": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^.+\\.md#[0-9]+$",
            "description": "Unique identifier: {artifact_id}#{block_index}"
          },
          "language": {
            "type": "string",
            "enum": ["python", "bash", "json", "yaml", "javascript", "typescript", "shell", "text"],
            "description": "Programming or markup language"
          },
          "purpose": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "What this example demonstrates (1-2 sentences)"
          },
          "tested": {
            "type": "boolean",
            "description": "Whether example has been executed against live system"
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^(ENV|PKG|STATE):.+$"
            },
            "description": "Required environment (format: PREFIX:value where PREFIX is ENV/PKG/STATE)"
          },
          "expected_output": {
            "type": ["string", "null"],
            "description": "Expected result pattern or literal output for validation"
          },
          "validation_error": {
            "type": ["string", "null"],
            "description": "Most recent validation error message if tested=false"
          },
          "validation_date": {
            "type": "string",
            "format": "date",
            "description": "When this specific example was last validated"
          }
        },
        "required": ["id", "language", "purpose", "tested"],
        "additionalProperties": false
      }
    },
    "last_validated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of most recent validation run for this artifact"
    },
    "validation_result": {
      "type": "object",
      "description": "Overall validation result for this artifact",
      "properties": {
        "passed": {
          "type": "boolean",
          "description": "True if all validation checks passed"
        },
        "total_examples": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of code examples found"
        },
        "passed_examples": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of examples that passed validation"
        },
        "failed_examples": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of examples that failed validation"
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "example_id": {
                "type": "string",
                "description": "ID of code example that failed"
              },
              "error_message": {
                "type": "string",
                "description": "Validation error description"
              },
              "error_type": {
                "type": "string",
                "enum": ["syntax_error", "execution_error", "output_mismatch", "dependency_missing"],
                "description": "Category of validation error"
              }
            },
            "required": ["example_id", "error_message", "error_type"]
          },
          "description": "List of validation errors encountered"
        },
        "warnings": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Non-fatal issues detected during validation"
        }
      },
      "required": ["passed", "total_examples", "passed_examples", "failed_examples", "errors"],
      "additionalProperties": false
    }
  },
  "required": ["artifact_id", "metadata", "last_validated", "validation_result"],
  "additionalProperties": false
}
